<resources>

    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="word_title">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/main_font</item>
    </style>

    <style name="InfoButton" parent="DefaultButton">
        <item name="android:background">@drawable/button_selector_info</item>
    </style>

    <style name="InfoButtonAccent" parent="DefaultButton">
        <item name="android:background">@drawable/button_selector_info_accent</item>
    </style>

    <style name="ConfirmButton" parent="DefaultButton">
        <item name="android:background">@drawable/button_selector_confirm</item>
    </style>

    <style name="CancelButton" parent="DefaultButton">
        <item name="android:background">@drawable/button_selector_cancel</item>
    </style>


</resources>